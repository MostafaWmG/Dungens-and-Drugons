<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="dungeons" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>test.ca.concordia.soen6441.model.persistence.sample_entities.GameObjectEntitySample</class>
		<class>test.ca.concordia.soen6441.model.persistence.sample_entities.FighterEntitySample</class>
		<class>test.ca.concordia.soen6441.model.persistence.sample_entities.GameMapEntitySample</class>
		<class>test.ca.concordia.soen6441.model.persistence.sample_entities.WallEntitySample</class>
		<class>test.ca.concordia.soen6441.model.persistence.sample_entities.ItemEntitySample</class>
		<class>ca.concordia.soen6441.d20.gamemap.GameMapEntity</class>
		<class>ca.concordia.soen6441.d20.gamemap.element.GameObjectEntity</class>
		<class>ca.concordia.soen6441.d20.gamemap.element.GroundEntity</class>
		<class>ca.concordia.soen6441.d20.gamemap.element.EnteryEntity</class>
		<class>ca.concordia.soen6441.d20.gamemap.element.WallEntity</class>
		<class>ca.concordia.soen6441.d20.gamemap.element.ExitEntity</class>
		<class>ca.concordia.soen6441.d20.fighter.FighterEntity</class>
		<class>ca.concordia.soen6441.d20.common.Location</class>
		<class>ca.concordia.soen6441.d20.item.ItemEntity</class>
		<class>ca.concordia.soen6441.d20.ability.AbilityEntity</class>
		<class>ca.concordia.soen6441.d20.attribute.ArmorClassEntity</class>
		<class>ca.concordia.soen6441.d20.attribute.AttackBonusEntity</class>
		<class>ca.concordia.soen6441.d20.attribute.DamageBonusEntity</class>
		<class>ca.concordia.soen6441.d20.attribute.HitPointEntity</class>
		<class>ca.concordia.soen6441.d20.item.ChestEntity</class>
		<class>ca.concordia.soen6441.d20.campaign.CampaignEntity</class>
		<class>ca.concordia.soen6441.d20.gamemap.element.GameObjectInstanceEntity</class>
		<shared-cache-mode>ALL</shared-cache-mode>
		<validation-mode>AUTO</validation-mode>
		<properties>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
			<!-- <property name="hibernate.use_sql_comments" value="true"/> -->
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:derby:dungeonsdb;create=true"/>
			<property name="javax.persistence.jdbc.user" value=""/>
			<property name="javax.persistence.jdbc.password" value=""/>
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
			<property name="hibernate.connection.autocommit" value="true"/>
		</properties>
	</persistence-unit>
</persistence>
